<h1>Nueva Historia</h1>

<%= form_for :history, :url => {:action => "create"}, :html => {:class=>'form-horizontal', :role=>'form'} do |f| %>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">N&uacute;mero</label>
		<div class="col-sm-10">
			<%= f.text_field :number, :class=>'form-control', :placeholder => 'Número' %>
		</div>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Usuario</label>
		<div class="col-sm-10">
			<%= f.text_field :user, :class=>'form-control', :placeholder => 'Usuario' %>
		</div>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Nombre</label>
		<div class="col-sm-10">
			<%= f.text_field :name, :class=>'form-control', :placeholder => 'Nombre' %>
		</div>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Prioridad de Negocio</label>
		<div class="col-sm-10">
			<%= f.text_field :priority, :class=>'form-control', :placeholder => 'Prioridad' %>
		</div>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Iteraci&oacute;n Asignada</label>
		<div class="col-sm-10">
			<%= f.text_field :iteration, :class=>'form-control', :placeholder => 'Iteración' %>
		</div>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Programador Responsable</label>
		<div class="col-sm-10">
			<%= f.text_field :programmer, :class=>'form-control', :placeholder => 'Programador' %>
		</div>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Descripci&oacute;n</label>
		<div class="col-sm-10">
			<%= f.text_area :description, :class=>'form-control', :placeholder => 'Descripción', :rows => 5 %>
		</div>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label">Observaciones</label>
		<div class="col-sm-10">
			<%= f.text_area :observations, :class=>'form-control', :placeholder => 'Observaciones', :rows => 5 %>
		</div>
	</div>
	<div class="form-group">
    	<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit :class => 'btn btn-primary' %>
		</div>
	</div>
<% end %>